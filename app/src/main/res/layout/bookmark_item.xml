<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bg_white_corner_6">

            <TextView
                android:id="@+id/txt_relativeMajor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fourteen"
                android:layout_marginTop="@dimen/eighteen"
                android:layout_marginEnd="@dimen/fourteen"
                android:layout_marginBottom="@dimen/fourteen"
                android:background="#00000000"
                android:text="@string/fsd_txt_major1"
                android:textColor="@color/O_50"
                android:textSize="12sp" />

            <Button
                android:id="@+id/item01_bookmark"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/sixteen"
                android:layout_marginEnd="@dimen/sixteen"
                android:background="@drawable/btn_item01_bookmark" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_relativeMajor"
                android:layout_marginStart="@dimen/sixteen"
                android:layout_marginBottom="@dimen/fourteen"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="12dp"
                android:textColor="@color/sysblack1"
                android:textSize="16sp"
                tools:text="제목(최대 한 줄)" />

            <TextView
                android:id="@+id/txt_subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_marginStart="@dimen/sixteen"
                android:layout_marginBottom="@dimen/sixteen"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/BG_80"
                android:textSize="14sp"
                tools:text="내용최대두줄" />

            <TextView
                android:id="@+id/txt_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_subTitle"
                android:layout_marginStart="@dimen/sixteen"
                android:layout_marginEnd="@dimen/sixteen"
                android:layout_marginBottom="@dimen/twenty"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/txt_available"
                android:textColor="@color/BG_70"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_join"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/txt_available"
                android:layout_marginHorizontal="@dimen/sixteen"
                android:layout_marginBottom="@dimen/twenty"
                android:background="@drawable/btn_ok_stroke_o_50"
                android:text="@string/btn_join"
                android:textColor="@color/O_50"
                android:textSize="14sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/twenty"
            android:background="@color/BG_30"/>
    </LinearLayout>

</layout>