<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="20dp"
        android:layout_marginEnd="@dimen/twenty_four"
        android:background="@drawable/btn_bg_white_stroke_bg_50">

        <TextView
            android:id="@+id/txt_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_o_10_corner_4_62"
            android:padding="8dp"
            android:textColor="@color/O_50"
            android:textSize="12dp"
            tools:text="학과" />

        <TextView
            android:id="@+id/txt_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sysblack1"
            android:textSize="16dp"
            tools:text="컴퓨터 활용 능력 1급"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/txt_leftNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BG_80"
            android:textSize="14dp"
            android:text="@string/txt_leftNumber"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_profile_60" />

            <TextView
                android:id="@+id/userMajor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/img_profile"
                android:background="@drawable/background_bg_30_corner99"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:textColor="@color/BG_80"
                android:textSize="14dp"
                tools:text="컴퓨터 공학부" />

            <TextView
                android:id="@+id/userNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userMajor"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/img_profile"
                android:paddingStart="10dp"
                android:textColor="@color/BG_70"
                android:textSize="16dp"
                tools:text="닉네임" />
        </RelativeLayout>
    </LinearLayout>

</layout>
