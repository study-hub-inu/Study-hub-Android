<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        android:background="@drawable/background_bg_white_corner_6">

        <RelativeLayout
            android:id="@+id/fs01_item01_relative01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fs01_item01_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_o_10_corner_4_62"
                android:padding="8dp"
                android:text="@string/txt_fs_modal_category"
                android:textColor="@color/O_50"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fs01_item01_bookmark"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_item01_bookmark" />

            <TextView
                android:id="@+id/fs01_item01_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fs01_item01_txt_title"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/sysblack1"
                android:textSize="18sp"
                tools:text="제목" />

            <TextView
                android:id="@+id/fs01_item01_sub01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fs01_item01_head"
                android:textColor="@color/BG_80"
                android:textSize="14sp"
                tools:text="시작날~종료날" />

            <TextView
                android:id="@+id/fs01_item01_sub02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fs01_item01_head"
                android:layout_alignParentEnd="true"
                android:text="@string/txt_left_number"
                android:textColor="@color/O_50"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_bg_20_corner_6"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/fs01_item01_peopleNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/txt_people_number"
                android:textColor="@color/BG_90"
                android:textSize="14sp"
                app:drawableTopCompat="@drawable/resized_icon_person_24" />

            <TextView
                android:id="@+id/fs01_item01_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/item01_fee"
                android:textColor="@color/BG_90"
                android:textSize="14sp"
                app:drawableTopCompat="@drawable/resized_icon_coin_gray_24" />

            <TextView
                android:id="@+id/fs01_item01_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/txt_gender"
                android:textColor="@color/BG_90"
                android:textSize="14sp"
                app:drawableTopCompat="@drawable/resized_icon_gender_gray_24" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fs01_item01_icon_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/resized_icon_profile_60" />

            <TextView
                android:id="@+id/fs01_item01_txt_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/fs01_item01_icon_profile"
                android:background="@drawable/background_bg_30_corner99"
                android:paddingLeft="8dp"
                android:paddingTop="6dp"
                android:paddingRight="8dp"
                android:paddingBottom="6dp"
                android:textColor="@color/BG_80"
                android:textSize="12sp"
                tools:text="작성자 학과" />

            <TextView
                android:id="@+id/fs01_item01_txt_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fs01_item01_txt_major"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/fs01_item01_icon_profile"
                android:textColor="@color/BG_70"
                android:textSize="12sp"
                tools:text="닉네임님 " />

            <TextView
                android:id="@+id/fs01_item01_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fs01_item01_txt_major"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:textColor="@color/BG_70"
                android:textSize="12sp"
                tools:text="생성날짜 " />
        </RelativeLayout>
    </LinearLayout>
</layout>