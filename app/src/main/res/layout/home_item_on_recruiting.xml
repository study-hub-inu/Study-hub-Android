<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:background="@color/syswhite"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item01_relative01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item01_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundword_o_10"
                android:padding="8dp"
                android:text="@string/item01_title"
                android:textColor="@color/O_50"
                android:textSize="12sp" />

            <Button
                android:id="@+id/item01_bookmark"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_item01_bookmark" />

            <TextView
                android:id="@+id/item01_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item01_txt_title"
                android:maxLines="2"
                android:paddingTop="12dp"
                android:textColor="@color/sysblack1"
                android:textSize="18sp"
                tools:text="제목(최대 두줄)"
                android:ellipsize="end"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item01_relative02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/item01_linear01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item01_txt_people"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/item01_people"
                    android:textColor="@color/BG_90"
                    android:textSize="14sp"
                    app:drawableLeftCompat="@drawable/resized_icon_person_gray"
                    android:drawablePadding="4dp"/>

                <TextView
                    android:id="@+id/item01_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/item01_fee"
                    android:textSize="14sp"
                    android:textColor="@color/BG_90"
                    android:layout_weight="1"
                    app:drawableLeftCompat="@drawable/resized_icon_coin_gray"
                    android:drawablePadding="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/item01_duedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item01_linear01"
                android:maxLines="2"
                android:layout_marginTop="12dp"
                android:padding="6dp"
                android:textColor="@color/BG_80"
                android:textSize="12sp"
                tools:text="@string/item01_dueDate"
                android:background="@drawable/backgroundword_stroke_gray"/>

        </RelativeLayout>
    </LinearLayout>
</layout>
